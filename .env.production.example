# ResiCentral - Configuración de Producción
# Copiar a .env.production y configurar valores reales

# ======================
# CONFIGURACIÓN GENERAL
# ======================
ENVIRONMENT=production
APP_NAME=ResiCentral
APP_VERSION=1.0.0
DEBUG=false

# ======================
# BASE DE DATOS
# ======================
DATABASE_URL=postgresql://resicentral:CHANGE_THIS_PASSWORD@postgres:5432/resicentral_prod
POSTGRES_DB=resicentral_prod
POSTGRES_USER=resicentral
POSTGRES_PASSWORD=CHANGE_THIS_PASSWORD

# ======================
# REDIS (Cache)
# ======================
REDIS_URL=redis://redis:6379/0
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=CHANGE_THIS_PASSWORD

# ======================
# MINIO (Almacenamiento)
# ======================
MINIO_ACCESS_KEY=CHANGE_THIS_ACCESS_KEY
MINIO_SECRET_KEY=CHANGE_THIS_SECRET_KEY
MINIO_BUCKET_NAME=resicentral-prod
MINIO_ENDPOINT=http://minio:9000
MINIO_SECURE=false

# ======================
# API BACKEND
# ======================
API_HOST=0.0.0.0
API_PORT=8000
API_SECRET_KEY=CHANGE_THIS_VERY_LONG_SECRET_KEY_FOR_PRODUCTION
API_BASE_URL=https://api.resicentral.com

# ======================
# CORS (Dominios permitidos)
# ======================
CORS_ORIGINS=https://resicentral.com,https://www.resicentral.com,https://app.resicentral.com

# ======================
# JWT (Autenticación)
# ======================
JWT_SECRET_KEY=CHANGE_THIS_JWT_SECRET_KEY_FOR_PRODUCTION
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ======================
# EMAIL (SMTP)
# ======================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@resicentral.com
SMTP_FROM_NAME=ResiCentral

# ======================
# WORKERS Y RENDIMIENTO
# ======================
WORKERS=4
MAX_WORKERS=8
WORKER_TIMEOUT=30
WORKER_KEEP_ALIVE=2
WORKER_CONNECTIONS=1000

# ======================
# LOGS
# ======================
LOG_LEVEL=info
LOG_FILE_PATH=/app/logs/app.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# ======================
# SEGURIDAD
# ======================
ALLOWED_HOSTS=resicentral.com,www.resicentral.com,api.resicentral.com
SECURE_SSL_REDIRECT=true
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=true
SECURE_HSTS_PRELOAD=true

# ======================
# MONITOREO
# ======================
ENABLE_METRICS=true
ENABLE_MONITORING=true
PROMETHEUS_MULTIPROC_DIR=/app/temp/prometheus
GRAFANA_ADMIN_PASSWORD=CHANGE_THIS_GRAFANA_PASSWORD

# ======================
# BACKUP
# ======================
BACKUP_RETENTION_DAYS=7
BACKUP_S3_BUCKET=resicentral-backups
BACKUP_S3_ACCESS_KEY=CHANGE_THIS_S3_ACCESS_KEY
BACKUP_S3_SECRET_KEY=CHANGE_THIS_S3_SECRET_KEY
BACKUP_S3_REGION=us-east-1

# ======================
# NOTIFICACIONES PUSH
# ======================
FIREBASE_PROJECT_ID=resicentral-app
FIREBASE_PRIVATE_KEY_ID=CHANGE_THIS_PRIVATE_KEY_ID
FIREBASE_PRIVATE_KEY=CHANGE_THIS_PRIVATE_KEY
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@resicentral-app.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=CHANGE_THIS_CLIENT_ID
FIREBASE_CLIENT_X509_CERT_URL=https://www.googleapis.com/robot/v1/metadata/x509/firebase-adminsdk%40resicentral-app.iam.gserviceaccount.com

# ======================
# PAGOS (Stripe)
# ======================
STRIPE_PUBLISHABLE_KEY=pk_live_CHANGE_THIS_STRIPE_PUBLISHABLE_KEY
STRIPE_SECRET_KEY=sk_live_CHANGE_THIS_STRIPE_SECRET_KEY
STRIPE_WEBHOOK_SECRET=whsec_CHANGE_THIS_WEBHOOK_SECRET

# ======================
# SERVICIOS EXTERNOS
# ======================
GOOGLE_MAPS_API_KEY=CHANGE_THIS_GOOGLE_MAPS_API_KEY
TWILIO_ACCOUNT_SID=CHANGE_THIS_TWILIO_ACCOUNT_SID
TWILIO_AUTH_TOKEN=CHANGE_THIS_TWILIO_AUTH_TOKEN
TWILIO_PHONE_NUMBER=+1234567890

# ======================
# FRONTEND
# ======================
FRONTEND_URL=https://resicentral.com
FRONTEND_PORT=3000

# ======================
# RATE LIMITING
# ======================
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_REQUESTS_PER_HOUR=1000
RATE_LIMIT_REQUESTS_PER_DAY=10000

# ======================
# CACHE
# ======================
CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE=1000
CACHE_PREFIX=resicentral

# ======================
# ARCHIVOS
# ======================
MAX_FILE_SIZE=10485760
ALLOWED_FILE_EXTENSIONS=jpg,jpeg,png,gif,pdf,doc,docx,xls,xlsx
UPLOAD_PATH=/app/uploads

# ======================
# TIMEZONE
# ======================
TIMEZONE=America/Mexico_City
LANGUAGE=es
LOCALE=es_MX

# ======================
# DESARROLLO (Solo para testing)
# ======================
# Descomentar solo en entorno de desarrollo
# ENABLE_SWAGGER=false
# ENABLE_CORS_ALL=false
# ENABLE_DEBUG_TOOLBAR=false